{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@app/*": [
                "app/*"
            ],
            "@src/*": [
                "src/*"
            ],
            "@fullcalendar/*": [
                "node_modules/@fullcalendar/*"
            ]
        },
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "incremental": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve"
    },
    "exclude": [
        "dist",
        ".next",
        "out",
        "next.config.js"
    ],
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx"
    ]
}